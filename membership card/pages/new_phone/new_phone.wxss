}
.phone-num input{
  display:inline-block;
}
.yanzheng-num{
  padding:40rpx 5%;
  display:flex;
  border-bottom:1px solid #e0e0e0;
}
.yanzheng-num input{
  margin-left:3%;
  width:62%;
}
