.get_phone_number{
  text-align: center;
  padding: 20rpx;
}
.phone_number{
  font-weight: bold;
}
.get_phone_number text{
  font-size: 25rpx;
  color:#999;
}
.phone_number text{
  font-size:28rpx;
  color:#666;
}
.phone-num{
  border-top:1px solid #e0e0e0;
  padding:30rpx 5%;
