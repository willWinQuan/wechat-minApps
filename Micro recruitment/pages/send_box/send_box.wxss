/* pages/send_box/send_box.wxss */
@import "../common/resume-list.wxss";

page{
    background: rgb(240,239,245); 
    /* height: 100%; */
}
.heard-nav{
    background: #fff;
    padding-bottom: 25rpx;
    position:fixed;
    width:100%;
    top:0;
    z-index: 999;
    border-bottom: 1px solid #eee;
}
.heard-nav text{
    margin: 0 20%; 
    padding-bottom:10rpx;
    font-size:34rpx;
}
.nodata{
    width: 100%;
    height: 100%;
    background: #fff; 
}
.nodata image{
    width:50%;
    margin:0 auto;
    display:block;
    height:300rpx;
    padding:25% 0;
    padding-bottom:73%;
}
/*加载更多  */
.loading{
  border: none;
  font-size: 30rpx;
  border-radius: 0;
  background: rgb(240,239,245);
  color: #bababa;
}
.loading::after{
  width: 0rpx;
  height: 0rpx;
  border: none;
  border-radius: 0;
} 

.send_box_wrap{
  margin-top: 70rpx;
}