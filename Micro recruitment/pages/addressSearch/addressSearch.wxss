/* pages/addressSearch/addressSearch.wxss */

page{ height: 100%;} 
.address{
  position: fixed;
  top: 0;
  width: 100%;
}
.top_city{
  width: 100%;
  position: relative;
  
}
.top_city input{
  margin: 10rpx auto;
  width:580rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #d5d6d7;
  font-size: 28rpx;
  text-align: center;
  border-radius: 5rpx;
  color:#000;
}
.search_icon{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:32rpx;
  right: 63%;
  z-index: 9;
}
.box1{
  line-height: 71rpx;
  padding-left: 16rpx;
  border-bottom: 1px solid #D5D6D7;
  color:#868686;
}
.box3{
  line-height: 110rpx;
  border-bottom: 1px solid #D5D6D7;
  padding-left: 16rpx;
}
/*  */
.no_img{
  width: 100%;
  text-align: center;
  margin-top: 150rpx;
}
.no_img image{
  width: 70%;
}
.content{
  position: absolute;
  top: 90rpx;
  box-sizing: border-box; 
  height:calc(100vh - 90rpx);
}
.right{
  position: fixed;
  right:0;
  top:9%;
  width: 70rpx;
  background: rgba(0, 0, 0, 0.4)
}
.right_next{
  width: 100%;
  height: 42rpx;
  text-align: center;
  color: #FFF;
}