/* pages/resume/add-each-experence.wxss */
 @import "resume-common/experience-common.wxss";

page{
     background: rgb(238,239,241); 
}
.add-experience{
    border: 1rpx solid rgb(146,191,246);
    color: rgb(146,191,246);
    width:42%;
    text-align:center;
    line-height:76rpx;
    margin:50rpx auto;
    border-radius: 5rpx;   
    background: #fff;   
    font-size: 33rpx;
    margin-bottom:10%;
}
.add-experience text{
    font-size: 30rpx;
}
.add-experience-navigator{
    width: 100%;
    padding:4% 0;
}
.add-experience-content{
    text-align:center;
    font-size:36rpx;
    color:#fff;
    width:70%;
    margin:0 auto;
    line-height:90rpx;
    background:-webkit-linear-gradient(left, rgb(57,206,249), rgb(80,128,236));
    background:-o-linear-gradient(right, rgb(57,206,249), rgb(80,128,236));
    background:-moz-linear-gradient(right, rgb(57,206,249), rgb(80,128,236));
    background:linear-gradient(to right, rgb(57,206,249) , rgb(80,128,236)); 
}
.savebtn{
    display:inline-block;
    background:#fff !important;
    border:none;
    font-size:30rpx !important;
    position:static;
    top:-10rpx !important;
    color:rgb(146,191,246);
    padding-left:12rpx;
    padding-right:10rpx;
    line-height:0;
    overflow:visible;
}
.label-text1{
    top:3rpx !important;
}
.savebtn::after{
    width: 0rpx;
    height: 0rpx;
    border: none;
}
