.nav{
  width: 100%;
  background: #FFF;
}
.box{
  width: 100%;
}
.box_nav{
  padding: 30rpx 0;
  border-bottom: 1px solid #EEE;
  width: 96%;
  margin-left: 2%;
}
.top_img{
  width: 120rpx;
  height: 120rpx;
  float: left;
  position: relative;
  /* margin-left: 20rpx; */
}
.top_img .image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.top_img .img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}
.top_right{
  display: inline-block;
  width: calc(100% - 160rpx);
  margin-left: 20rpx;
  overflow: hidden;
}
.top_right .right_text1{
  font-size: 34rpx;
  line-height: 60rpx;
}
.top_right .right_text2{
  font-size: 24rpx;
  color: #9b9b9b;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 15rpx;
  word-break:break-all;
}
.right_time{
  font-size: 24rpx;
  color: #c9c9c9;
}
/*  */
.right_box{
  margin-top: 30rpx;
  background: #f6f6f6;
  border-radius:10rpx;
  font-size: 30rpx;
  width: calc(100% - 20rpx) 
}
.box_box{
  width: 92%;
  margin-left: 4%;
  padding: 20rpx 0;
}
.box_text1{
  color: #5b75ee;
}
.box_text2{
  color: #9b9b9b;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 24rpx;
  word-break:break-all;
}
/*  */
.box_voice{
  width: 90%;
  margin-left: 5%;
  padding: 20rpx 0;
  position: relative;
}
.voice_img1{
  width: 254rpx;
  height: 70rpx;
  position: relative;
  display: inline-block;
}
.voice_img2{
  width: 0rpx;
  height: 70rpx;
  position: absolute;
  top: 20rpx;
  left: 0;
  overflow: hidden;
  display: inline-block;
}
.voice_play{
  font-size: 30rpx;
  color: #FFF;
  line-height: 70rpx;
  margin-left: 35rpx;
  position: relative;
  z-index: 9;
}
.voice_img1 image{
  width: 25rpx;
  height: 30rpx;
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  z-index: 9;
}
.img2_img{
  width: 254rpx;
  height: 70rpx;
}
.box_voice text{
  font-size: 28rpx;
  line-height: 70rpx;
  color: #c9c9c9;
  margin-left: 20rpx;
}
/*  */
.loging image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: -3rpx;
}
.loging{
  color: #c9c9c9;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
}
.no_more{
  color: #c9c9c9;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
}
