/*  */
.nav_xinxi{
  font-size: 28rpx;
  color: #707070;
   display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2; 
  margin-bottom: 20rpx;
  word-break:break-all;
}
.nav_bq{
  padding-bottom: 20rpx;
  width: calc(100% + 20rpx);
  margin-left: -10rpx;
  font-size: 26rpx;
}

.nav_bq text{
  display:inline-block;
  width:24%;
  line-height:50rpx;
  box-sizing:border-box;
  text-align:center;
  border:1px solid #eee;
  color:#a1a1a1;
  border-radius:20px;
  margin:0 .5%;
  margin-bottom:20rpx;
}
/*  */
.nav_answer{
  width: 100%;
  background: #FFF;
  margin-bottom: 20rpx;
}
.answer_xinxi{
  width: 90%;
  margin-left: 5%;
}
.answer_xinxi textarea{
  border: 1px solid #EEE;
  width: 100%;
  height: 180rpx;
  margin-bottom: 40rpx;
}
.answer_xinxi .textarea{
  border: 1px solid #EEE;
  width: 100%;
  height: 180rpx;
  margin-bottom: 40rpx;
  word-break:break-all;
}
.answer_text{
  font-size: 28rpx;
}
.answer_text .text1,.answer_text .text2,.answer_text .text3{
  display: inline-block;
  margin: 20rpx 0;
}
.answer_text .text3{
  float: right;
  color: #ff7e60;
}
/*  */
.answer_img_cz{
  display: inline-block;
  position: relative;
  margin: 0 20rpx;
  margin-bottom: 20rpx;
}
.answer_img_cz view{
  font-size: 28rpx;
  color: #c9c9c9;
  width: 100%;
  text-align: center;
}
.answer_img_cz .del_img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
}
.answer_img .img_img{
  width: 125rpx;
  height: 125rpx;
}
.answer_img .add_img{
  width: 125rpx;
  height: 125rpx;
  margin: 0 20rpx;
}
.answer_img_sm{
  color: #c9c9c9;
  font-size: 28rpx;
  padding-bottom: 30rpx;
}
